<ul> <h1> My Tasks</h1>
  <% @tasks.each do |task| %>
    <li> <input type="checkbox"> <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%> </li>

    <% end %>
</ul>

<%= button_to "Create", tasks_new_path, method: :get, class: "btn btn-primary" %>
